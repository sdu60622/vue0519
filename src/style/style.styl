#app
	width 1024px
	height 768px
	margin auto

#Top
	width: 1024px
	height 120px
	background-image url('../assets/0401.jpg')
	color #ffffff
	text-align center
	text-family '標楷體'
	font-size 52px
	text-shadow 10px 10px 15px #333333
	line-height 120px

#Marquee
	height 30px
	width 100%
	font-family '標楷體'
	line-height 30px
	background-image url('../assets/0402.jpg')
	color #0000ff
	font-size 19px

#Content
  background-image url('../assets/0402.jpg')
  table
    margin auto
  tr
    height 150px
  td
    vertical-align middle
    text-align center
    &:first-child
    width 200px
    &:not(:first-child)
      width 300px
    img
      height 150px

#Footer
	width 100%
	height 78px
	color #ffffff
	font-family '標楷體'
	line-height 200%
	text-align left
	background-color #660